@model ClientsDirectoryApp.Models.ClientInfo

<h2>Add New Client</h2>
<form asp-action="AddClient" method="post">
    <div class="form-group">
        <label>Client ID</label>
        <input type="number" asp-for="ClientId" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Company Name</label>
        <input asp-for="CompanyName" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Web URL</label>
        <input asp-for="WebUrl" class="form-control" />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label>Category</label>
        <input asp-for="Category" class="form-control" />
    </div>
    <div class="form-group">
        <label>Standard</label>
        <input asp-for="Standard" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
